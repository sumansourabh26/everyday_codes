import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

class c12 extends JFrame{
	JPanel field;
	JLabel text;
	static Color[] color = {Color.BLACK,Color.BLUE,Color.CYAN,Color.DARK_GRAY,Color.GRAY};
	
	c12(){
		super("title");
		field = new JPanel();
		text = new JLabel("nothing");field.setBackground(Color.PINK);
		add(field, BorderLayout.CENTER);add(text,BorderLayout.SOUTH);
		field.addMouseListener(handler());
		
	}
	
	
}

public class trial2 {
	public static void main(String[] args) {
		c12 frame = new c12();
		frame.setVisible(true);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setSize(500,300);
	}

}
